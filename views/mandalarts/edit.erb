<form action="/edit/mandalart/<%= @cell.id %>" method="post">
	<p><input type="text" name="mandalart_title" value="<%= @mandalart.name %>"></p>
		 <div class="container" style="min-height:500px;">
		 	<div class="row">
		 		<% range = 1..9 %>
		 		<% range.each do |i| %>
		 			<div class="col-sm-4 p-1">
			 			<div class="container">
			 				<div class="row">
	 		          <% range.each do |j| %>
					 				<div class="col-4 p-0">
					 					<% body_name = "body#{i}#{j}" %>
					 					<input type="text" name="body<%= i %><%= j %>" value="<%= @cell.send(body_name) %>" style="width:100%; height:60px;">
					 				</div>
				 				<% end %>
				 			</div>
						</div>
					</div>
				<% end %>
		<div style="text-align: right;">
			<input type="submit" value="編集完了" class="btn btn-primary">
			<button id="printButton" class="btn btn-success">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
				  <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
				  <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"/>
				</svg>
				pdfで保存
			</button>
		</div>
	 <script>
	    // ボタン要素を取得
	    var printButton = document.getElementById("printButton");
	
	    // ボタンがクリックされたときの処理
	    printButton.addEventListener("click", function() {
	        window.print(); // 印刷ダイアログを開く
	    });
	 </script>
</form>
